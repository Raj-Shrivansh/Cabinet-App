<%= simple_form_for(user,class:"mt-5") do |form| %>
<h1 class="text-center">Signup Form</h1>
<div class="form-group">
    <%= form.label :"Username :"%>
    <%= form.text_field :username,class:"form-control",placeholder:"Username",required:true%>
    <% if @user.errors %>
        <% @user.errors.full_messages_for(:"username").each do |msg| %>
        <p class="error"><%= msg %></p>
        <% end %>
    <% end %>
</div>
<div class="form-group">
    <%= form.label :"Email :"%>
    <%= form.email_field :email,class:"form-control",placeholder:"Email",required:true %>
    <% if @user.errors %>
        <% @user.errors.full_messages_for(:"email").each do |msg| %>
        <p class="error"><%= msg %></p>
        <% end %>
    <% end %>
</div>
<div class="form-group">
    <%= form.label :"Password :"%>
    <%= form.password_field :password,class:"form-control",placeholder:"Password"%>
    <% if @user.errors %>
        <% @user.errors.full_messages_for(:"password").each do |msg| %>
        <p class="error"><%= msg %></p>
        <% end %>
    <% end %>
</div>
<%= form.submit 'Signup',class:"btn btn-lg btn-success btn-block" %>
<% end %>