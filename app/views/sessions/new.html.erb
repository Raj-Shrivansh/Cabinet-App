<h2>Login Page</h2>
<%= form_with(scope: :session,url: login_path) do |form| %>
<div class="form-group">
    <%= form.label :"Email :"%>
    <% if @user.present? %>
    <%= form.email_field :email,class:"form-control",placeholder:"Enter Your Email",required:true,value: @user.email %>
    <% else %>
    <%= form.email_field :email,class:"form-control",placeholder:"Enter Your Email",required:true %>
    <% end %>
</div>
<div class="form-group">
    <%= form.label :"Password :"%>
    <%= form.password_field :password,class:"form-control",placeholder:"Enter Your Password",required:true%>
    <% if @user.present? %>
    <p class="error">Password  is incorrect.</p>
    <% end %>
</div>
<%= form.submit "Login",class:"btn btn-lg btn-success btn-block" %>
<% end %>
