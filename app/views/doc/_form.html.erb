<%= simple_form_for(doc) do|form|%>
<div class="form-group">
    <%= form.label :"Title :"%>
    <%= form.text_field :title,required:true,placeholder:"Enter Your Title",class:"form-control" %>
</div>
<div class="form-group">
    <%= form.label :"Content :"%>
    <%= form.text_area :content,required:true,placeholder:"Enter Your Content",class:"form-control" %>
</div>
<%= form.submit "Submit",class:"btn btn-lg btn-block btn-info"%>
<% end %>