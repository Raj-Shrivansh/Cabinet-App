<%= simple_form_for(doc) do|form|%>
<div class="form-group">
    <%= form.label :"Title :"%>
    <%= form.text_field :title,required:true,placeholder:"Enter Your Title",class:"form-control" %>
    <% if @doc.errors %>
        <% @doc.errors.full_messages_for(:title).each do |msg| %>
        <p class="error"><%= msg %></p>
    <% end %>
    <% end %>
</div>
<div class="form-group">
    <%= form.label :"Content :"%>
    <%= form.text_area :content,required:true,placeholder:"Enter Your Content",class:"form-control",rows: 5%>
    <% if @doc.errors %>
        <% @doc.errors.full_messages_for(:content).each do |msg| %>
        <p class="error"><%= msg %></p>
    <% end %>
    <% end %>
</div>
<%= form.submit "Submit",class:"btn btn-lg btn-block btn-info"%>
<%= link_to 'Back', doc_index_path,class:"btn btn-warning mt-1"%>
<% end %>
